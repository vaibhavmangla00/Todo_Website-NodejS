<%- include("header") -%>


<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>
<div class="box">

    <% newItems.forEach(function(item){ %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkedBox" value="<%= item._id %>" onchange="this.form.submit()">
            <p><%= item.name %></p>
        </div>
        <input type="hidden" name="checkedList" value="<%= listTitle %>">
    </form>
    <% }) %>

    <form class="item" action="/" method="post">
        <input type="text" name="newitem" autocomplete="off" placeholder="Add a Todo">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("footer") -%>